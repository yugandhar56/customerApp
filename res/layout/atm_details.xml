<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    

    <TextView
        android:id="@+id/atm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atm_id"
        android:layout_below="@+id/atm_id"
        android:layout_marginTop="20dp"
        android:text="ATM NAME"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/atm_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="20dp"
        android:text="ATM _ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atm_name"
        android:layout_below="@+id/atm_name"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/atm_name"
        android:layout_below="@+id/address"
        android:layout_marginTop="20dp"
       
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/atm_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_issue"
        android:layout_alignBottom="@+id/user_issue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="ATM Issue" />

    <Button
        android:id="@+id/user_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address"
        android:layout_centerVertical="true"
        android:text="User Issue" />

</RelativeLayout>
